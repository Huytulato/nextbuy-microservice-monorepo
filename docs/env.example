############################################
# NextBuy - Local dev environment variables #
############################################

# By default (when KAFKA_ENABLED is not set), Kafka is only enabled in production.
# For local dev, explicitly turn it on if you have Kafka running.
KAFKA_ENABLED=false

# Local Kafka
# KAFKA_BROKERS=localhost:9092
# KAFKA_SSL=false

# Confluent Cloud (SASL_SSL)
# KAFKA_ENABLED=true
# KAFKA_BROKERS=pkc-xxxxxx.region.provider.confluent.cloud:9092
# KAFKA_SSL=true
# KAFKA_API_KEY=YOUR_CONFLUENT_API_KEY
# KAFKA_API_SECRET=YOUR_CONFLUENT_API_SECRET

# Optional
# KAFKA_CLIENT_ID=nextbuy-local
# KAFKA_STRICT=false
# KAFKAJS_NO_PARTITIONER_WARNING=1


